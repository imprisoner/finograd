  div.container.footer__top
    aside.footer__aside
      a(href="#").footer__logo
        include /assets/svg/logo.svg
      div.footer__messengers
        a(href="#").button.button--square
          include /assets/svg/telegram.svg
        a(href="#").button.button--square
          include /assets/svg/whatsapp.svg
        a(href="mailto:#").button.button--square
          include /assets/svg/envelope.svg
