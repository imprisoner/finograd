      nav.footer__menu.footer-menu
        h6.footer-menu__title.text.text--16 О компании
        ul.footer-menu__list.text.text--14
          li.footer-menu__item О нас
          li.footer-menu__item Этапы работы
          li.footer-menu__item Услуги
      nav.footer__menu.footer-menu
        h6.footer-menu__title.text.text--16 Дополнительная информация
        ul.footer-menu__list.text.text--14
          li.footer-menu__item Партнёры
          li.footer-menu__item Частые вопросы
      div.footer__menu.footer-menu
        h6.footer-menu__title.text.text--16 Связаться
        ul.footer-menu__list.text.text--14
          li.footer-menu__item
            a(href="tel:+74950000000") +7 (495) 000-00-00
          li.footer-menu__item
            a(href="mailto:info@mail.ru") info@mail.ru
  div.container.footer__bottom
    a(href="#").footer__policy.text.text--14 Политика конфиденциальности
    a(href="#").footer__agreement.text.text--14 Соглашение на обработку персональных данных
